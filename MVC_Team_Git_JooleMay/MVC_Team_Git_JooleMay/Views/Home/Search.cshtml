@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>SearchPage</title>
    <style>
        body {
            background: linear-gradient(to top,white,rgb(32,140,185)) fixed;
            /*///#2085AF 	R: 32 G: 133 B: 175*/
        }

        .content {
            height: 200px;
            width: 400px;
            position: fixed;
            top: 30%;
            left: 50%;
            margin-top: -200px;
            margin-left: -200px;
            display: block;
            text-align: center;
        }

        #logoname {
            font-weight: bold;
            font-family: Sans-serif;
            font-size: 110px;
            height: 60px;
            color: darkblue;
            display: inline-block;
        }
        #sign {
            font-family: Arial;
            font-weight: bold;
        }

        h1 {
            padding-bottom: 5px;
        }

        #logonametwo {
            font-size: 120px;
            margin-left: 160px;
        }

        .circle-overlaping::before {
            content: '';
            position: absolute;
            top: 80px;
            left: 80px;
            background-color: deepskyblue;
            width: 100px;
            height: 80px;
            border-radius: 50%;
            shape-outside: circle(50% at 0 0);
        }

        .circle-overlaping::after {
            content: '';
            position: absolute;
            top: 70px;
            left: 130px;
            background-color: darkblue;
            width: 100px;
            height: 80px;
            border-radius: 50%;
            shape-outside: circle(50% at 0 0);
        }

        .search {
            text-align: center;
        }

        .btn-info {
            background-color: steelblue;
            border-radius: 3px;
        }
        
        .nocolor {
            background-color: white;
        }

        .searchbar {
            position: relative;
            width: 500px;
            height: 30px;
            border: 0;
            padding: 0;
            margin-left: 385px;
            margin-top: 260px;
        }

        .searchbar .btn-search {
                width: 200px;
                border-radius: 3px;
            }

        select:invalid {
            color: gray;
        }

        select:invalid option:first-child {
                color: gray;
            }

        select:invalid option:not(:first-child) {
                color: black;
            }
    </style>
</head>
<body>

    <div class="content">
        <h1 id="logoname">j<span class="circle-overlaping"></span><span id="logonametwo">le</span></h1>
        <p id="sign">Building Product Selection Platform</p>
    </div>
    <div class="search">
        <div style="position:relative;width:200px;height:25px;border:0;padding:0;margin:0;">
            <form action="/action_page.php" class="searchbar">
                <select name="dropdown" class="btn-info" required>
                    <option value="Category" selected>Category</option>
                    <option value="Mechanical" class="nocolor">Mechanical</option>
                    <option value="Electrical" class="nocolor">Electrical</option>
                    <option value="Stationary" class="nocolor">Stationary</option>
                    <option value="Furniture" class="nocolor">Furniture</option>
                </select>

                @*this is search button should change with dropdown*@
                <select name="dropdown" class="btn-search" required>
                    <option value="">Search...</option>
                    @*There should be several option values which are consistent with above option*@
                    <option value="fan" class="nocolor">Fan</option>
                    <option value="vaccums" class="nocolor">Vaccums</option>
                    <option value="toasters" class="nocolor">Toasters</option>
                </select>
               
                <button type="submit" class="btn-info"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>
</body>
</html>

