@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>    
    <style>
        body {
            background: linear-gradient(to top,white,rgb(32,140,185)) fixed;
            /*///#2085AF 	R: 32 G: 133 B: 175*/
        }
        #signp{
            margin-right:50px;
        }
        .btn {
          border: none;
          background-color: inherit;
          float:right;
          font-size: 16px;
          cursor: pointer;
          display: inline-block;
          margin-right:150px; 
          border-radius: 5px;
}
        .content {
            height: 200px;
            width: 400px;
            position: fixed;
            top: 30%;
            left: 50%;
            margin-top: -200px;
            margin-left: -200px;
            display: block;
            text-align: center;
        }

        #sign {
            font-family: Arial;
            font-weight: bold;
        }


        #logoname {
            font-weight: bold;
            font-family: Sans-serif;
            font-size: 110px;
            height: 60px;
            color: darkblue;
            display: inline-block;
        }

        h1 {
            padding-bottom: 5px;
        }

        #logonametwo {
            font-size: 120px;
            margin-left: 160px;
        }

        .circle-overlaping::before {
            content: '';
            position: absolute;
            top: 80px;
            left: 80px;
            background-color: deepskyblue;
            width: 100px;
            height: 80px;
            border-radius: 50%;
            shape-outside: circle(50% at 0 0);
        }

        .circle-overlaping::after {
            content: '';
            position: absolute;
            top: 70px;
            left: 130px;
            background-color: darkblue;
            width: 100px;
            height: 80px;
            border-radius: 50%;
            shape-outside: circle(50% at 0 0);
        }

        #submit {
            background-color:steelblue;
            margin-left: 200px;
            width: 6em;
            height: 2em;
            border-radius: 3px;
        }

        .bg-email-icon {
            background: url('https://img.icons8.com/metro/22/000000/contacts.png') no-repeat 97.25% 0.5px white;
            border-radius: 3px;
        }

        .bg-lock-icon {
            background: url('https://img.icons8.com/android/22/000000/lock.png') no-repeat 97.25% 0.5px white;
            border-radius: 3px;
        }

    </style>
</head>
<body>
    @*this is sign up button*@
    <div class="signup">
        <button class="btn default">Sign Up</button>
        @*there should be a click function and redirect to sign up page*@
    
    </div>
    
    <div class="content">
        <h1 id="logoname">j<span class="circle-overlaping"></span><span id="logonametwo">le</span></h1>
        <p id="sign">Building Product Selection Platform</p>
        <form action="/action_page.php">
            @*user name text box*@
            <div class="input-container">
                <input type="text" name="username" size="38" placeholder="Username or Email" class="bg-email-icon">
            </div>
            <p></p>
            @*password text box*@
            <div class="input-container">
                <input type="text" name="password" size="38" placeholder="Password" class="bg-lock-icon">
            </div>
            <p></p>
            <p></p>
            @*submit button after insert username and password*@
            <input type="submit" value="Log In" id="submit">
        </form>
    </div>

</body>
</html>
